---
import Layout from '../../layouts/Layout.astro';
import BottomNav from '../../components/BottomNav.astro';
import RewardBanner from '../../components/RewardBanner.astro';
import { SURAH_INFO, MULK_VERSES } from '../../data/mulk-verses';
---

<Layout title="Paneli">
  <div class="min-h-screen flex flex-col bg-[var(--color-background)]">
    <!-- Header -->
    <header class="sticky top-0 z-10 bg-[var(--color-surface)]/80 backdrop-blur-lg border-b border-[var(--color-border)] px-4 py-3 safe-top">
      <div class="max-w-lg mx-auto flex items-center justify-between">
        <div>
          <h1 class="heading-section tracking-tight">Mulk 30</h1>
          <p class="text-xs text-[var(--color-text-secondary)]">Sfida e Ramazanit</p>
        </div>
        <!-- (#9) Consolidated theme toggle — uses shared script in Layout -->
        <button id="theme-toggle" class="w-10 h-10 rounded-full bg-[var(--color-background)] flex items-center justify-center active:scale-95 transition-transform" aria-label="Ndrysho temën">
          <svg id="icon-moon" class="w-5 h-5 text-[var(--color-text)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
          </svg>
          <svg id="icon-sun" class="w-5 h-5 text-[var(--color-text)] hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </button>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 px-4 py-6">
      <div class="max-w-lg mx-auto space-y-6">

        <!-- Reward Banner (shared component #5) -->
        <RewardBanner variant="compact" />

        <!-- Progress Card -->
        <div class="card">
          <div class="flex items-center justify-between mb-4">
            <h2 class="heading-card">Progresi yt</h2>
            <span class="text-sm text-[var(--color-text-secondary)]" id="progress-text">0/30</span>
          </div>
          <div class="progress-bar">
            <div class="progress-bar-fill" id="progress-fill" style="width:0%"></div>
          </div>
          <div class="flex justify-between mt-3 text-sm">
            <div class="flex items-center gap-1 text-[var(--color-text-secondary)]">
              <svg class="w-4 h-4 text-orange-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 23c-3.6 0-7-2.4-7-7 0-3.1 2.7-6.4 5-9.1V2l2.5 2L15 2v4.9c2.3 2.7 5 6 5 9.1 0 4.6-3.4 7-8 7z"/>
              </svg>
              <span id="streak-count">0 ditë radhazi</span>
            </div>
            <div class="text-[var(--color-primary)] font-medium" id="current-day-label">
              Dita 1
            </div>
          </div>
          <!-- Motivational milestone -->
          <div id="milestone-msg" class="hidden mt-3 pt-3 border-t border-[var(--color-border)]">
            <p class="text-xs text-[var(--color-primary)] font-medium text-center" id="milestone-text"></p>
          </div>
        </div>

        <!-- Today's Verse Card -->
        <div class="card border border-[var(--color-primary)]/20" id="today-card">
          <div class="flex items-center gap-2 mb-4">
            <div class="w-8 h-8 rounded-full bg-[var(--color-primary)] flex items-center justify-center">
              <span class="text-white text-sm font-bold" id="today-day-num">1</span>
            </div>
            <div>
              <h3 class="heading-card">Ajeti i sotëm</h3>
              <p class="text-xs text-[var(--color-text-secondary)]" id="today-meta">Al-Mulk • Ajeti 1</p>
            </div>
          </div>

          <div class="bg-[var(--color-background)] rounded-2xl p-4 mb-4">
            <p class="arabic arabic-large text-center text-[var(--color-text)] leading-loose" id="today-arabic"></p>
          </div>

          <p class="text-sm text-[var(--color-text-secondary)] italic mb-3" id="today-translit"></p>
          <p class="text-[var(--color-text)] leading-relaxed" id="today-albanian"></p>

          <div class="flex items-center gap-4 mt-4 py-2 px-3 bg-[var(--color-background)] rounded-xl" id="today-steps"></div>

          <div class="flex gap-3 mt-4">
            <a id="today-detail-link" href="/app/day/1" class="btn btn-primary flex-1">
              Shiko detajet
            </a>
            <button id="mark-complete" class="btn btn-secondary" aria-label="Shëno si të përfunduar">
              <svg id="check-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Timeline Link (#19: fixed to /app/timeline which exists) -->
        <a href="/app/timeline" class="card-interactive flex items-center justify-between hover:bg-[var(--color-background)] active:scale-[0.98]">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-[var(--color-primary)]/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-medium text-[var(--color-text)]">Kalendari i sfidës</h3>
              <p class="text-sm text-[var(--color-text-secondary)]">Shiko të gjitha 30 ditët</p>
            </div>
          </div>
          <svg class="w-5 h-5 text-[var(--color-text-secondary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </main>

    <!-- Bottom Nav (shared component #6, #15: text-[11px]) -->
    <BottomNav active="home" />
  </div>
</Layout>

<script>
  import { getState, getCurrentDay, getStreak, getProgress, toggleDay, isDayCompleted, getDayProgress, getActiveStep, REQUIRED_COUNT } from '../../lib/challenge';
  import { getVerseByDay, SURAH_INFO } from '../../data/mulk-verses';
  import { getSession } from '../../lib/supabase';

  // Auth guard (#3)
  (async () => {
    try {
      const { session } = await getSession();
      if (!session) {
        window.location.href = '/auth/login';
        return;
      }
    } catch (e) {
      // Allow offline usage with localStorage
    }
  })();

  function updateUI() {
    const state = getState();
    const day = getCurrentDay(state);
    const verse = getVerseByDay(day);
    const streak = getStreak(state);
    const progress = getProgress(state);
    const completed = isDayCompleted(day);

    document.getElementById('progress-text')!.textContent = `${state.completedDays.length}/30`;
    (document.getElementById('progress-fill') as HTMLElement).style.width = `${progress}%`;
    document.getElementById('streak-count')!.textContent = `${streak} ditë radhazi`;
    document.getElementById('current-day-label')!.textContent = `Dita ${day}`;

    document.getElementById('today-day-num')!.textContent = String(day);
    document.getElementById('today-meta')!.textContent = `${SURAH_INFO.name} • Ajeti ${verse?.ayahNumber}`;
    document.getElementById('today-arabic')!.textContent = verse?.arabic || '';
    document.getElementById('today-translit')!.textContent = verse?.transliteration || '';
    document.getElementById('today-albanian')!.textContent = verse?.albanian || '';
    (document.getElementById('today-detail-link') as HTMLAnchorElement).href = `/app/day/${day}`;

    const btn = document.getElementById('mark-complete') as HTMLButtonElement;
    if (completed) {
      btn.classList.add('!bg-[var(--color-primary)]', '!text-white', '!border-[var(--color-primary)]');
    } else {
      btn.classList.remove('!bg-[var(--color-primary)]', '!text-white', '!border-[var(--color-primary)]');
    }

    const dayProgress = getDayProgress(day);
    const stepsHtml = [
      { label: '<svg class="w-3.5 h-3.5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072M6.5 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h2.5l4-4v14l-4-4z"></path></svg>', count: dayProgress.listenCount, color: 'blue' },
      { label: '<svg class="w-3.5 h-3.5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>', count: dayProgress.readCount, color: 'emerald' },
      { label: '<svg class="w-3.5 h-3.5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path></svg>', count: dayProgress.reciteCount, color: 'purple' },
    ].map((s) => {
      const done = s.count >= REQUIRED_COUNT;
      return `<div class="flex items-center gap-1 text-xs ${done ? `text-${s.color}-500` : 'text-[var(--color-text-secondary)]'}">
        <span>${s.label}</span>
        <span>${Math.min(s.count, REQUIRED_COUNT)}/${REQUIRED_COUNT}</span>
      </div>`;
    }).join('');

    const stepsContainer = document.getElementById('today-steps');
    if (stepsContainer) stepsContainer.innerHTML = stepsHtml;

    const completedCount = state.completedDays.length;
    const milestoneEl = document.getElementById('milestone-msg');
    const milestoneText = document.getElementById('milestone-text');
    if (milestoneEl && milestoneText) {
      let msg = '';
      if (completedCount === 0) msg = 'Fillo sot — çdo ditë të afron më shumë!';
      else if (completedCount < 5) msg = `${completedCount}/30 — Fillimi i mirë, vazhdo kështu!`;
      else if (completedCount < 10) msg = `${completedCount}/30 — Po ndërton një zakon të bukur!`;
      else if (completedCount < 15) msg = `${completedCount}/30 — Gjysma e rrugës! Mos u ndal!`;
      else if (completedCount < 20) msg = `${completedCount}/30 — Mbi gjysmën! Kurani të pret!`;
      else if (completedCount < 25) msg = `${completedCount}/30 — Pothuajse! Vetëm pak ditë mbeten!`;
      else if (completedCount < 30) msg = `${completedCount}/30 — Fundi po afron! Mos hiq dorë!`;
      else msg = 'Masha\'Allah! E përfundove sfidën! Kurani yt të pret!';
      milestoneText.textContent = msg;
      milestoneEl.classList.remove('hidden');
    }
  }

  document.getElementById('mark-complete')?.addEventListener('click', () => {
    const state = getState();
    const day = getCurrentDay(state);
    toggleDay(day);
    updateUI();
  });

  // (#9) Consolidated theme toggle
  const toggle = document.getElementById('theme-toggle');
  function updateThemeIcons() {
    const dark = document.documentElement.classList.contains('dark');
    document.getElementById('icon-moon')?.classList.toggle('hidden', dark);
    document.getElementById('icon-sun')?.classList.toggle('hidden', !dark);
  }
  toggle?.addEventListener('click', () => {
    document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
    updateThemeIcons();
  });

  updateUI();
  updateThemeIcons();
</script>
